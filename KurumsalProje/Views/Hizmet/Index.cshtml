@model IEnumerable<KurumsalProje.Models.Hizmet>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Hizmetler</h2>
<a class="btn btn-primary" href="/Hizmet/Create">Yeni Hizmet Ekle</a>
<table class="table table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>Başlık</th>
            <th>Açıklama</th>
            <th>Resim URL</th>
            <th>İşlemler</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td> @Html.DisplayFor(modelItem => item.HizmetId)</td>
                <td> @Html.DisplayFor(modelItem => item.Baslik)</td>
                <td> @Html.Raw(item.Aciklama)</td>
                <td><img src="@item.ResimURL" width="100" height="100" /></td>
                <td><a href="/Hizmet/Edit/@item.HizmetId">Güncelle</a> | <a href="/Hizmet/Delete/@item.HizmetId">Sil</a></td>
            </tr>
        }


    </tbody>
</table>

