@model KurumsalProje.Models.Kimlik

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="form">
    <form class="form-validate form-horizontal" id="feedback_form" method="post" action="/Kimlik/Edit/@Model.KimlikId" enctype="multipart/form-data">
        <div class="form-group ">
            <label for="cname" class="control-label col-lg-2">Başlık <span class="required">*</span></label>
            <div class="col-lg-10">
                <input class="form-control" id="Title" name="Title" minlength="5" type="text" required value="@Model.Title" />
            </div>
        </div>
        <div class="form-group ">
            <label for="cname" class="control-label col-lg-2">Anahtar <span class="required">*</span></label>
            <div class="col-lg-10">
                <input class="form-control" id="Keywords" name="Keywords" minlength="5" type="text" required value="@Model.Keywords" />
            </div>
        </div>
        <div class="form-group ">
            <label for="cname" class="control-label col-lg-2">Açıklama <span class="required">*</span></label>
            <div class="col-lg-10">
                <input class="form-control" id="Description" name="Description" minlength="5" type="text" required value="@Model.Description" />
            </div>
        </div>
        <div class="form-group ">
            <label for="curl" class="control-label col-lg-2">Önceki Resim</label>
            <div class="col-lg-10">
                <img src="@Model.LogoUrl" height="150" width="150" />
            </div>
        </div>
        <div class="form-group ">
            <label for="curl" class="control-label col-lg-2">Logo URL<span class="required">*</span></label>
            <div class="col-lg-10">
                <input required type="file" class="form-control " name="LogoURL" accept=".jpg,.png,.jpeg" />
            </div>
        </div>
        <div class="form-group ">
            <label for="cname" class="control-label col-lg-2">Unvan <span class="required">*</span></label>
            <div class="col-lg-10">
                <input class="form-control" id="Unvan" name="Unvan" minlength="5" type="text" required value="@Model.Unvan" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-offset-2 col-lg-10">
                <button class="btn btn-primary" type="submit">Ekle</button>
                <button class="btn btn-default" type="button"><a href="/Kimlik/Index">Geri Dön</a></button>
            </div>
        </div>
    </form>
</div>

