@model IEnumerable<KurumsalProje.Models.Slider>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Slider Kayıtları</h2>
<a class="btn btn-primary" href="/Slider/Create">Yeni Slider Ekle</a>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Başlık</th>
            <th>Açıklama</th>
            <th>Resim URL</th>
            <th>İşlemler</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td> @Html.DisplayFor(modelItem => item.Baslik)</td>
                <td> @Html.DisplayFor(modelItem => item.Aciklama)</td>
                <td><img src="@item.ResimURL" width="100" height="100" /></td>
                <td><a href="/Slider/Edit/@item.SliderId">Güncelle</a> | <a href="/Slider/Delete/@item.SliderId">Sil</a></td>
            </tr>
        }


    </tbody>
</table>

